<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/logreg"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="147dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/textborder"
        android:src="@drawable/ic_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unक्षिप्त"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/amatica_sc"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPEAK. REFLECT. UNDERSTAND. HEAL."
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:fontFamily="@font/amatica_sc"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="300dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/gradheads"
        android:text="WELCOME! LOGIN HERE"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/book_padding"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:fontFamily="@font/abel"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttons"
        android:drawableLeft="@drawable/ic_google_icon"
        android:paddingLeft="15dp"
        android:text="GOOGLE"
        android:textColor="#000000"
        android:textSize="18sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:rippleColor="#7E7E7E" />

</LinearLayout>