<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    >


    <RelativeLayout
    android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/cardgrad"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/cardgrad2"
            android:fontFamily="@font/abel"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="hei"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />



            <TextView
                android:id="@+id/texts"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_below="@id/textViewTitle"
                android:layout_width="match_parent"
                android:background="@drawable/textborder2"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/abel"
                android:text="hello"
                android:maxLines="2"
                tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/texts"
            >

            <TextView
                android:id="@+id/del"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/gradheads"
                android:padding="5dp"
                android:text="DELETE"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/edit"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/gradheads"
                android:layout_toLeftOf="@+id/del"
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="EDIT"
                tools:ignore="MissingConstraints"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
